<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title%></td>
      <td><%= article.content %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td>Authored by <%= article.author %> at <%= article.created_at %></td>
    </tr>
  <% end %>
</table>

<h1><%= link_to "new article", new_article_path(article)</h1>
