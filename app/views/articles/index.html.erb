<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @articles.each do |article| %>
      <p><%= link_to article.title, article_path(article)%></p>
      <p><%= article.content %></p>
      <p><%= link_to 'Show', article_path(article) %></p>
  <% end %>
</table>

<h1><a href ='/articles/new'>new article</a></h1>
